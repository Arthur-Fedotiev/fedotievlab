{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "module": "ES2020",
    "lib": ["es2020", "DOM", "WebWorker", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "@builder.io/qwik",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "outDir": "tmp",
    "noEmit": true,
    "types": ["node", "vite/client"],
    "paths": {
      "~/*": ["./src/*"],
      "@fl/blog-ui": ["./src/modules/blog/ui/index.ts"],
      "@fl/blog-utils": ["./src/modules/blog/utils/index.ts"],
      "@fl/blog-data-access": ["./src/modules/blog/data-access/index.ts"],
      "@fl/blog-post-feature": ["./src/modules/blog/blog-post-feature/index.ts"]
    }
  },
  "files": ["./.eslintrc.cjs"],
  "include": ["src"]
}
